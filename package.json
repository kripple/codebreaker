    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "playwright": "1.51.1",
    "prettier": "3.5.3",
    "stylelint": "16.18.0",
    "stylelint-order": "6.0.4",
    "stylelint-prettier": "5.0.3",
    "svgo": "^3.3.2",
    "tsx": "4.19.3",
    "typescript": "5.8.2",
    "vite": "6.3.5"
