    "@tabler/icons-react": "^3.31.0",
    "@tanstack/react-query": "^5.76.1",
    "fastify": "5.3.2",
    "just-shuffle": "4.2.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-redux": "^9.2.0",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@playwright/test": "1.51.1",
    "@types/express": "5.0.1",
