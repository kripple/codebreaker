{
  "name": "codebreaker",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kripple/codebreaker.git"
  },
  "license": "MIT",
  "author": "Kelly Ripple",
  "type": "module",
  "scripts": {
    "start": "vite",
    "api": "netlify dev",
    "build": "tsc -p tsconfig.app.json && vite build",
    "postbuild": "rm docs/mockServiceWorker.js",
    "build:api": "rm -rf netlify/edge-functions && tsc -p tsconfig.api.json && tsx vite.api-config.ts",
    "build:ci": "tsc -p tsconfig.app.json && vite build && tsc -p tsconfig.api.json && tsx vite.api-config.ts",
    "lint": "eslint . && stylelint '**/*.css' && prettier --check .",
    "preview": "vite preview",
    "setup": "playwright install",
    "generate": "drizzle-kit generate --config config/drizzle.config.ts",
    "migrate:dev": "dotenvx run -f .env.development -- npm run migrate",
    "migrate": "drizzle-kit migrate --config config/drizzle.config.ts",
    "test": "playwright test --config config/playwright.config.ts",
    "e2e": "dotenvx run -f .env.test -- playwright test --config config/playwright.e2e-config.ts",
    "test:report": "playwright show-report",
    "optimize": "svgo src/app/assets  --config config/svgo.config.mjs",
    "login": "netlify login",
    "env": "netlify env:import .env",
    "deploy": "netlify deploy --prod",
    "update": "msw init public"
  },
  "dependencies": {
    "@mantine/core": "^8.0.0",
    "@neondatabase/serverless": "^1.0.0",
    "@netlify/edge-functions": "^2.12.0",
    "@reduxjs/toolkit": "^2.8.2",
    "canvas-confetti": "^1.9.3",
    "drizzle-orm": "^0.43.1",
    "pg": "8.10.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-redux": "^9.2.0",
    "urlpattern-polyfill": "^10.1.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.44.1",
    "@netlify/edge-handler-types": "^0.34.1",
    "@playwright/test": "^1.51.1",
    "@types/canvas-confetti": "^1.9.0",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.15.2",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@typescript-eslint/eslint-plugin": "7.16.1",
    "@typescript-eslint/parser": "7.16.1",
    "@vitejs/plugin-react": "^4.3.4",
    "drizzle-kit": "^0.31.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-react-refresh": "0.4.19",
    "msw": "^2.8.5",
    "netlify-cli": "^21.5.0",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "rollup-plugin-visualizer": "^6.0.0",
    "stylelint": "^16.18.0",
    "stylelint-order": "^6.0.4",
    "stylelint-prettier": "^5.0.3",
    "svgo": "^3.3.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "5.2.0"
  }
}
